@model FinancasApp.Presentation.Models.Movimentacoes.MovimentacoesConsultaViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Consulta de movimentações</h4>
<p>Consulte suas contas a pagar e receber.</p>

@using (Html.BeginForm())
{
    <div class="row mt-2">
        <div class="col">
            <label>Data de início:</label>
            @Html.TextBoxFor(model => model.DataMin,
                     new { @class = "form-control", @type = "date" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.DataMin)
            </span>
        </div>
        <div class="col">
            <label>Data de fim:</label>
            @Html.TextBoxFor(model => model.DataMax,
                     new { @class = "form-control", @type = "date" })
            <span class="text-danger">
                @Html.ValidationMessageFor(model => model.DataMax)
            </span>
        </div>
        <div class="col">
            <input type="submit" class="btn btn-success mt-4"
                   value="Pesquisar Movimentações" />
        </div>
    </div>
}

@if(Model != null && Model.ListagemMovimentacoes != null)
{
    if (Model.ListagemMovimentacoes.Count > 0)
    {
        <div class="table-responsive mt-3">
            <table class="table table-sm table-hover table-striped">
                <thead>
                    <tr>
                        <th>Data</th>
                        <th>Valor</th>
                        <th>Tipo</th>
                        <th>Nome</th>
                        <th>Categoria</th>
                        <th>Operações</th>
                    </tr>       

                </thead>
                <tbody>
                    @foreach(var movimentacao in Model.ListagemMovimentacoes)
                    {
                        <tr>
                            <td>@movimentacao.Data?.ToString("dd/MM/yyyy")</td>
                            <td>@movimentacao.Valor?.ToString("c")</td>
                            <td>@movimentacao.Tipo.ToString()</td>
                            <td>@movimentacao.Nome</td>
                            <td></td>
                            <td>
                                <a href="/Movimentacoes/Edicao" class="btn btn-primary">Editar</a>
                                <a href="/Movimentacoes/Exclusão" class="btn btn-danger">Excluir</a>
                            </td>
                            
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <td colspan="6">
                        Quantidade de movimentações: @Model.ListagemMovimentacoes.Count
                    </td>
                </tfoot>
            </table>
        </div>
    }
    else
    {
        <div class="mt-3">
            Nenhuma movimentação encontrada no período selecionado
        </div>
    }
}
